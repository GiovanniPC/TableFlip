<!-- views/auth/signup.hbs -->
<h2>Sign Up</h2>

<form action="/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow" required>
  <br><br>
  <label for="firstname">First Name</label>
  <input id="firstname" type="text" name="firstname" placeholder="Jon" required>
  <br><br>
    <label for="lastname">Last Name</label>
  <input id="lastname" type="text" name="lastname" placeholder="Snow" required>
  <br><br>
  <label for="username">Email</label>
  <input id="username" type="text" name="email" placeholder="me@domain.com" required>
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password" required>

  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button type="submit">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>