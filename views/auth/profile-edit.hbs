<button action="/profile/edit/{{profile._id}}" method="post" enctype="multipart/form-data">
  <label for="">Name:</label>
  <input type="text" name="firstName" value="{{profile.firstName}}"> <input type="text" name="lastName"
    value="{{profile.lastName}}">
  <br><br>
  <label>Image</label>
  <input type="file" name="image">
  <br><br>
  <label for="">Description:</label>
  <input type="text" name="description" value="{{profile.description}}">
  <br><br>

  <label for="">Email:</label>
  <input type="text" name="email" value="{{profile.email}}">
  <br><br>
  <label for="">Address:</label>
  <input type="text" name="address" value="{{profile.address}}">
  <button type="submit">EDIT</button>
</button>