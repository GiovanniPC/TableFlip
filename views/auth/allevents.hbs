<form action="/events" method="POST">
    <select id="type" name="type" class="form-control form-size-sel">
        <option value="boardgame">Board Game</option>
        <option value="cardgame">Card Game</option>
        <option value="tabletoprpg">TableTop RPG</option>
    </select>
    <br>
    <select id="typegameboard" name="typegameboard">
    </select>
    <br><br>
    <button type="submit"> Search </button>
</form>

<br>
<button><a href="/events">All</a></button>
<br><br>
{{#each allEvents}}
<p>{{title}}</p>
<p>{{type}}</p>
<p>{{description}}</p>
<button><a href="/event/{{id}}">See More</a></button>
{{/each}}

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript" src="/js/all-events.js"></script>